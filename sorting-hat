let number = 0
input.onGesture(Gesture.Shake, function () {
    number = Math.randomRange(0, 3)
    if (number == 0) {
        basic.showString("Hufflepuff!")
    } else if (number == 1) {
        basic.showString("Gryffindor!")
    } else if (number == 2) {
        basic.showString("Ravenclaw!")
    } else if (number == 3) {
        basic.showString("Slytherin!")
    }
})
basic.showString("Shake me!")
